<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="AeasPersistenceUnit">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>com.kevin.aeas.object.v2.AeasFirstCourse</class>
        <class>com.kevin.aeas.object.v2.AeasSchedule</class>
        <class>com.kevin.aeas.object.v2.AeasSecondCourse</class>
        <class>com.kevin.aeas.object.v2.AeasStudent</class>
        <class>com.kevin.aeas.object.v2.AeasTeacher</class>
        <class>com.kevin.aeas.object.v2.AeasTeacherAbility</class>
        <class>com.kevin.aeas.object.v2.AeasTeacherDefaultHoliday</class>
        <class>com.kevin.aeas.object.v2.AeasTeacherHoliday</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/aeas"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="root"/>
            <property name="hibernate.archive.autodetection" value="class"/>  
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
