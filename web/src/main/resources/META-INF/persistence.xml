<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="OraclePersistenceUnit">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>com.kevin.course.object.oracle.OracleFirstCourse</class>
        <class>com.kevin.course.object.oracle.OracleSchedule</class>
        <class>com.kevin.course.object.oracle.OracleSecondCourse</class>
        <class>com.kevin.course.object.oracle.OracleStudent</class>
        <class>com.kevin.course.object.oracle.OracleTeacher</class>
        <class>com.kevin.course.object.oracle.OracleTeacherAbility</class>
        <class>com.kevin.course.object.oracle.OracleTeacherDefaultHoliday</class>
        <class>com.kevin.course.object.oracle.OracleTeacherHoliday</class>
        <class>com.kevin.course.object.oracle.OracleUser</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes> <!-- in order to support both mysql/oracle-->
        <properties>
            <property name="hibernate.connection.url" value="jdbc:oracle:thin:@10.182.251.230:1521:orcl"/>
            <property name="hibernate.connection.driver_class" value="oracle.jdbc.driver.OracleDriver"/>
            <property name="hibernate.connection.username" value="aeas"/>
            <property name="hibernate.connection.password" value="oracle"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
     
    <persistence-unit name="MySqlPersistenceUnit">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>com.kevin.course.object.mysql.MySqlFirstCourse</class>
        <class>com.kevin.course.object.mysql.MySqlSchedule</class>
        <class>com.kevin.course.object.mysql.MySqlSecondCourse</class>
        <class>com.kevin.course.object.mysql.MySqlStudent</class>
        <class>com.kevin.course.object.mysql.MySqlTeacher</class>
        <class>com.kevin.course.object.mysql.MySqlTeacherAbility</class>
        <class>com.kevin.course.object.mysql.MySqlTeacherDefaultHoliday</class>
        <class>com.kevin.course.object.mysql.MySqlTeacherHoliday</class>
        <class>com.kevin.course.object.mysql.MySqlUser</class>
        
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/aeas"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="root"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
