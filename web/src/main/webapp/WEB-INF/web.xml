<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>course</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>RestServlet</servlet-name>
		<servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>com.sun.jersey.config.property.packages</param-name>
			<param-value>com.kevin.course.service</param-value>
		</init-param>
		<init-param>
			<param-name>com.sun.jersey.api.json.POJOMappingFeature</param-name>
			<param-value>true</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>RestServlet</servlet-name>
		<url-pattern>/service/*</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>teacherServlet</servlet-name>
		<servlet-class>com.kevin.course.servlet.TeacherServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>teacherServlet</servlet-name>
		<url-pattern>/teacherServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>studentServlet</servlet-name>
		<servlet-class>com.kevin.course.servlet.StudentServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>studentServlet</servlet-name>
		<url-pattern>/studentServlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<description></description>
		<display-name>scheduleServlet</display-name>
		<servlet-name>scheduleServlet</servlet-name>
		<servlet-class>com.kevin.course.servlet.ScheduleServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>scheduleServlet</servlet-name>
		<url-pattern>/scheduleServlet</url-pattern>
	</servlet-mapping>

    <servlet>
        <description>firstCourseServlet</description>
        <display-name>firstCourseServlet</display-name>
        <servlet-name>firstCourseServlet</servlet-name>
        <servlet-class>com.kevin.course.servlet.FirstCourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>firstCourseServlet</servlet-name>
        <url-pattern>/firstCourseServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <description>secondCourseServlet</description>
        <display-name>secondCourseServlet</display-name>
        <servlet-name>secondCourseServlet</servlet-name>
        <servlet-class>com.kevin.course.servlet.SecondCourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>secondCourseServlet</servlet-name>
        <url-pattern>/secondCourseServlet</url-pattern>
    </servlet-mapping>
</web-app>